<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <object class="AdwPreferencesWindow" id="window">
        <property name="can-navigate-back">1</property>
        <child>
            <object class="AdwPreferencesPage" id="profile">
                <property name="title" translatable="yes">Profile</property>
                <property name="icon-name">user-info-symbolic</property>

                <child>
                    <object class="GtkBox">
                        <property name="orientation">horizontal</property>
                        <child>
                            <object class="AdwAvatar"></object>
                        </child>
                        <child>
                            <object class="GtkLabel">
                                <property name="label" translatable="yes">User</property>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
            <child>

                <object class="AdwPreferencesPage" id="extensions">
                    <property name="title" translatable="yes">Extensions</property>
                    <property name="icon-name">application-x-addon-symbolic</property>
                    <child>
                        <object class="AdwPreferencesGroup">
                            <property name="title" translatable="yes">Extensions</property>
                            <property name="description" translatable="yes">You can add extensions that are compatible with Visual Studio: Code. It'll run in Echidna just like there.</property>
                            <child type="header-suffix">
                                <object class="GtkButton">
                                    <child>
                                        <object class="AdwButtonContent">
                                            <style>
                                                <class name="pill" />
                                            </style>
                                            <property name="label" translatable="yes">Install Extensions</property>
                                            <property name="icon-name">system-software-install-symbolic</property>
                                        </object>
                                    </child>
                                </object>
                            </child>
                        </object>
                    </child>
                </object>
            </child>
       
    </object>
</interface>